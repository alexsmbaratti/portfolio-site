<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='stylesheets/index.css'>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <script src="/javascripts/blog.js"></script>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=alJ4KBOXEX">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=XByepA3gzz">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=XByepA3gzz">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#22f7c7">
    <meta name="msapplication-TileColor" content="#22f7c7">
    <meta name="theme-color" content="#ffffff">

    <meta property="og:title" content="<%= title %>">
    <meta property="og:description"
          content="This is my portfolio website, containing some of my software and DIY projects">
    <meta property="og:image" content="/social_image.png">
    <meta name="twitter:image" content="/social_image.png">
    <% const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>
</head>

<body>
<%- include('partials/navbar') %>
<section class="hero is-medium is-primary is-bold">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title is-3">
                <%= title %>
            </h1>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <h1 class="title has-text-centered">Posts</h1>
        <div class="is-hidden-mobile">
            <div class="timeline is-centered">
                <header class="timeline-header">
                    <span class="tag is-medium is-primary">Latest</span>
                </header>
                <% posts.forEach(function(post) { %>
                    <div class="timeline-item">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <div class="card">
                                <div class="card-content">
                                    <% let date = new Date(Date.parse(post['date'])) %>
                                    <p class="heading has-text-weight-bold has-text-primary"><%= months[date.getMonth()]; %> <%= date.getDate() %>, <%= date.getFullYear() %></p>
                                    <a href="/blog/<%= post['slug'] %>">
                                        <p class="title is-4 has-text-weight-bold"><%- post['title']['rendered'] %></p>
                                    </a>
                                    <p class="subtitle is-5"><%- post['excerpt']['rendered'] %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
                <div class="timeline-header">
                    <span class="tag is-medium is-primary">Oldest</span>
                </div>
            </div>
        </div>
        <div class="is-hidden-tablet">
            <div class="timeline">
                <header class="timeline-header">
                    <span class="tag is-medium is-primary">Latest</span>
                </header>
                <% posts.forEach(function(post) { %>
                    <div class="timeline-item">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <div class="card">
                                <div class="card-content">
                                    <% let date = new Date(Date.parse(post['date'])) %>
                                    <p class="heading has-text-weight-bold has-text-primary"><%= months[date.getMonth()]; %> <%= date.getDate() %>
                                        , <%= date.getFullYear() %></p>
                                    <a href="/blog/<%= post['slug'] %>">
                                        <p class="title is-4 has-text-weight-bold"><%- post['title']['rendered'] %></p>
                                    </a>
                                    <p class="subtitle is-5"><%- post['excerpt']['rendered'] %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
                <div class="timeline-header">
                    <span class="tag is-medium is-primary">Oldest</span>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('partials/footer') %>
</body>
</html>
